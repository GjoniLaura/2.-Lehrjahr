@page "/reservations-overview"
@using Restaurant_Reservation.Klassen
@using Restaurant_Reservation.Service
@using Restaurant_Reservation.Datenbank
@inject ReservationService ReservationService
@inject NavigationManager NavigationManager

<PageTitle>Reservations Overview</PageTitle>

<div class="container mt-5">
    <h1 class="mb-4">Reservations Overview</h1>

    <div class="mb-4">
        <label for="restaurantName" class="form-label">Enter Restaurant Name:</label>
        <input type="text" id="restaurantName" @bind="restaurantName" class="form-control" placeholder="Restaurant Name" />
        <button class="btn btn-primary mt-2" @onclick="LoadReservations">Search</button>
    </div>

    @if (reservations != null)
    {
        @if (reservations.Count == 0)
        {
            <p>No reservations found for the specified restaurant.</p>
        }
        else
        {
            <h2>Reservations for @restaurantName</h2>
            @foreach (var dateGroup in reservations.GroupBy(r => r.Start.Date).OrderBy(g => g.Key))
            {
                <div class="date-group">
                    <h3>@dateGroup.Key.ToString("dddd, dd MMMM yyyy")</h3>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Number of Guests</th>
                                <th>Time</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reservation in dateGroup)
                            {
                                <tr>
                                    <td>@reservation.User.Vornamen</td>
                                    <td>@reservation.User.Nachnamen</td>
                                    <td>@reservation.User.Email</td>
                                    <td>@reservation.User.Telefonummer</td>
                                    <td>@reservation.Numpeople</td>
                                    <td>@reservation.Start.ToString("HH:mm")</td>
                                    <td>@reservation.User.Bemerkung</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        }
    }
    else
    {
        <p>Loading reservations...</p>
    }
</div>

@code {
    private string restaurantName;
    private List<Klassen.Reservation> reservations;

    private async Task LoadReservations()
    {
        if (string.IsNullOrWhiteSpace(restaurantName))
        {
            return;
        }

        var restaurants = await DatabaseHelper.GetAllRestaurants();
        var restaurant = restaurants.FirstOrDefault(r => r.Name.Equals(restaurantName, StringComparison.OrdinalIgnoreCase));

        if (restaurant == null)
        {
            reservations = new List<Klassen.Reservation>();
        }
        else
        {
            reservations = await ReservationService.GetReservationsForRestaurant(restaurant.Id);
        }

        StateHasChanged();
    }
}

<style>
    .date-group {
        margin-bottom: 40px;
    }

        .date-group h3 {
            margin-top: 20px;
            color: #333;
            border-bottom: 2px solid #ddd;
            padding-bottom: 5px;
        }

</style>